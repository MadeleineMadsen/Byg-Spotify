---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import TopBar from "../components/TopBar.astro";
import Footer from "../components/Footer.astro";
import PlaylistCard from "../components/PlaylistCard.astro";
import Mainlayout from "../layouts/MainLayout.astro";
import CardCategory from "../components/CardCategory.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<!-- Forskellige kategorier -->
<Mainlayout title="Browse all">
  <main>
    <h2>Browse all</h2>
    <div class="kort1">
    <CardCategory
      newBadge={false}
      header="Specielt til dig"
    /></div>

    <div class="kort2">
    <CardCategory
      newBadge={true}
      header="Nye udgivelser"
    /></div>

    <div class="kort3">
    <CardCategory
        header="Hitlister"
    /></div>
    
    <div class="kort4">
    <CardCategory
        newBadge={true}
        header="Opdag"
    /></div>

    <div class="kort5">
    <CardCategory
      header="Dansk"
    /></div>

    <div class="kort6">
    <CardCategory
      header="Pop"
    /></div>

    <div class="kort7">
    <CardCategory
      header="Hiphop"
    /></div>

    <div class="kort8">
    <CardCategory
      header="Rock"
    /></div>

    <div class="kort9">
    <CardCategory
      header="RnB"
    /></div>

    <div class="kort10">
    <CardCategory
      header="Jazz"
    /></div>

  </main>
</Mainlayout>

<!-- Styling -->
<style>
    body {
      display: grid;
      grid-template-columns: auto 1fr;
      grid-template-rows: auto 1fr auto;
      grid-template-areas:
        "nav topbar"
        "nav main"
        "footer footer";
      height: 100%;
    }
    :global(main) {
      grid-area: main;
    }
    :global(nav) {
      grid-area: nav;
    }
    :global(.topbar) {
      grid-area: topbar;
    }
    :global(footer) {
      grid-area: footer;
    }
  
    main {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr 1fr;
      grid-template-rows: 2fr;
      gap: 2rem;
  
      background: linear-gradient(#1f1f1f 0, var(--surface-default) 100%) 0 0 /
          100% 20rem no-repeat,
        var(--surface-default);
  
      overflow-y: auto;
      padding: var(--space-lg) var(--space-md);
    }


    /* Alle kategorierne med style */
    .kort1 {
        background-color: rgb(37, 169, 101);
        padding: 50px;
        border-radius: 20px;

        grid-column: 1 / 2;
        grid-row: 2;
    }

    .kort2 {
        background-color: rgb(102, 41, 168);
        padding: 50px;
        border-radius: 20px;

        grid-column: 2 / 3;
        grid-row: 2;
    }

    .kort3 {
        background-color: rgb(37, 37, 162);
        padding: 50px;
        border-radius: 20px;

        grid-column: 3 / 4;
        grid-row: 2;
    }

    .kort4 {
        background-color: rgb(151, 93, 35);
        padding: 50px;
        border-radius: 20px;

        grid-column: 4 / 5;
        grid-row: 2;
    }  
    
    .kort5 {
        background-color: rgb(171, 39, 173);
        padding: 50px;
        border-radius: 20px;

        grid-column: 5 / 6;
        grid-row: 2;
    }  
    
    .kort6 {
        background-color: rgb(165, 41, 41);
        padding: 68px;
        border-radius: 20px;

        grid-column: 1 / 2;
        grid-row: 3;
    }

    .kort7 {
        background-color: rgb(41, 142, 165);
        padding: 68px;
        border-radius: 20px;

        grid-column: 2 / 3;
        grid-row: 3;
    }

    .kort8 {
        background-color: rgb(200, 203, 35);
        padding: 68px;
        border-radius: 20px;

        grid-column: 3 / 4;
        grid-row: 3;
    }

    .kort9 {
      background-color: rgb(37, 169, 101);
        padding: 68px;
        border-radius: 20px;

        grid-column: 4 / 5;
        grid-row: 3;
    }

    .kort10 {
      background-color: rgb(102, 41, 168);
        padding: 68px;
        border-radius: 20px;

        grid-column: 5 / 6;
        grid-row: 3;
    }

    /* Responsiv */
    @media (width > 1000px) {
      main {
        padding: var(--space-lg) var(--space-xl);
      }
    }
  </style>